mac: 0.7.1
description: Scaled and Load-Balanced Application
name: demo
version: '1.0'
parents:
  aws: aws-autoscale.abstract.macfile

roles:
  app:
    instance create:
      bootstrap bash: |
        sudo apt-get update
        sudo apt-get install nginx -y
      environment:
      - DB_IP: 127.0.0.1
      - APP_BRANCH: master

infrastructures:  # infrastructures runs everything. The order is preserved.

  # create E2C instance using the configuration for role 'app'
  image_base_inf:
    name: app
    provider: amazon
    location: us-east-1
    hardware: t1.micro
    role: app
    release: ubuntu
    amount: 1

  aws.*